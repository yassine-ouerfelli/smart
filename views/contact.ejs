<%- include('parts/header.ejs')%>
    <br><br>
    <div class="container">
        <section class="vh-100">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <h2 class="c_us">Contact Us</h2><hr><br>
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="/public/images/contact.avif" class="img-fluid" alt="Sample image">
                    </div>

                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1"><br><br><br>
                        <form>
                            <div class="form-outline mb-4">
                                <input type="text" id="form3Example3" class="form-control form-control-lg"
                                placeholder="Enter your name" />
                                <label class="form-label" for="form3Example3">Your Name</label>
                            </div>
           
                            <div class="form-outline mb-3">
                                <input type="email" id="form3Example4" class="form-control form-control-lg"
                                placeholder="Enter your email" />
                                <label class="form-label" for="form3Example4">Your Email</label>
                            </div>
                     
                            <div class="form-outline mb-3">
                                <textarea type="text" id="form3Example4" class="form-control form-control-lg"
                                placeholder="Enter your message"></textarea>
                                <label class="form-label" for="form3Example4">Your Message</label>
                            </div>
                            <div class="text-center text-lg-start mt-4 pt-2">
                                <center>
                                    <button type="submit" value="Send" class="btn btn-primary btn-lg" style="padding-left: 1.5rem; padding-right: 1.5rem;">Send</button>
                                </center>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

<%- include('parts/bottom.ejs')%>